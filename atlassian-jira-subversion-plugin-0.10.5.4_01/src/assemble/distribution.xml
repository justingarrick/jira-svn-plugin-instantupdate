<assembly>
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <scope>compile</scope>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>org.tmatesoft.svnkit:svnkit</include>
                <include>com.trilead:trilead-ssh2</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <files>
        <file>
            <source>pom.xml</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/release/README.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/main/resources/subversion-jira-plugin.properties</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>src/release/TMATE-LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>src/release/TRILEAD-LICENSE</source>
            <outputDirectory>/</outputDirectory>
            <filtered>false</filtered>
        </file>
        <file>
            <source>${project.build.directory}/${project.build.finalName}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <filtered>false</filtered>
        </file>
    </files>
</assembly>